<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModuloPiscina.App">
    <Application.Resources>


        <ResourceDictionary>

            <Color x:Key="Color1">#7DB900</Color>
            <Color x:Key="Color2">#424A52</Color>
            <Color x:Key="Color3">#DDDDDD</Color>
            
            <Style x:Key="botonStyle1" TargetType="Button">
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Color1}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
            
            <Style x:Key="botonStyle2" TargetType="Button">
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Color2}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>